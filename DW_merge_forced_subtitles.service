[Unit]
Description=Merge Forced subtitle Service
After=network.target

[Service]
User=root
Group=root

Type=simple
# Adjust the path below to where you actually saved the .sh file
ExecStart=/bin/bash /usr/local/bin/DW_merge_forced_subtitles.sh
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
